{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "es2020",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/**"
  ]
}
