{
  "name": "blueprint-npm-typescript",
  "version": "1.0.0",
  "description": "Template repository for TypeScript npm packages",
  "main": "dist/main.js",
  "repository": "git@github.com:joggerdocs/blueprint-npm-typescript.git",
  "author": "@joggerdocs",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "format:fix": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "type:check": "tsc --noEmit",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.48.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.31.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
